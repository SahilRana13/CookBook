<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RecipeReviewFragment">

    <TextView
        android:id="@+id/ratingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Rating : "
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/dark"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"/>

    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/star1"
        android:layout_toRightOf="@+id/ratingText"
        android:layout_marginTop="47dp"
        android:background="@drawable/ic_baseline_star_24"/>

    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/star2"
        android:layout_toRightOf="@+id/star1"
        android:layout_marginTop="47dp"
        android:background="@drawable/ic_baseline_star_24"/>

    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/star3"
        android:layout_toRightOf="@+id/star2"
        android:layout_marginTop="47dp"
        android:background="@drawable/ic_baseline_star_24"/>

    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/star4"
        android:layout_toRightOf="@+id/star3"
        android:layout_marginTop="47dp"
        android:background="@drawable/ic_baseline_star_24"/>

    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/star5"
        android:layout_toRightOf="@+id/star4"
        android:layout_marginTop="47dp"
        android:background="@drawable/ic_baseline_star_24"/>


    <Button
        android:id="@+id/submitRecipeReviewBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#ECF0F3"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background"/>

</RelativeLayout>