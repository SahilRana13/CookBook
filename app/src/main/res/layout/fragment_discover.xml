<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.DiscoverFragment">

    <AutoCompleteTextView
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:id="@+id/homeSearchBar"
        android:background="@drawable/email"
        android:layout_marginLeft="20dp"
        android:hint="Search Recipe/Chef Name"
        android:textColor="#193566"
        android:textColorHint="#A9B6C9"
        android:paddingLeft="25dp"
        android:drawablePadding="20dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/button_search_discover"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:layout_marginLeft="350dp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"/>



    <ListView
        android:id="@+id/autocomplete_search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/myTextView"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myTextView"
        android:layout_below="@+id/button_search_discover"

        android:text="@string/top_recipes"
        android:textColor="@color/dark"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        />
    <!--android:layout_below="@+id/homeSearchBar"-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--android:layout_below="@+id/homeSearchBar"-->


</RelativeLayout>