<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light"
    tools:context=".Fragments.MyRecipeDetailsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageSwitcher
                android:id="@+id/receiveMyRecipeImageView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_photo_library_black_24dp"
                tools:ignore="VectorDrawableCompat"
                android:scaleType="fitXY"
                android:contentDescription="@string/add_images_videos" />


            <ImageButton
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginTop="50dp"
                android:layout_toLeftOf="@+id/receiveMyRecipeImageView"
                android:background="@drawable/ic_navigate_before_black_24dp"
                android:id="@+id/btnPreviousImage"
                android:layout_toStartOf="@+id/receiveMyRecipeImageView" />


            <ImageButton
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/receiveMyRecipeImageView"
                android:background="@drawable/ic_navigate_next_black_24dp"
                android:id="@+id/btnNextImage"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/recipe_name"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/receiveMyRecipeName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:textColor="#193566"
                android:background="@drawable/textbox"
                android:drawablePadding="50dp"
                android:paddingLeft="15dp"
                android:inputType="text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/chef_name"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyChefName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="340dp"
                android:textColor="#193566"
                android:background="@drawable/textbox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:inputType="textPersonName"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="430dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/recipe_type"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyRecipeType"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="420dp"
                android:textColor="#193566"
                android:background="@drawable/textbox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:inputType="textPersonName"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="510dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/country"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyCountry"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="500dp"
                android:textColor="#193566"
                android:background="@drawable/textbox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:inputType="text"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="590dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/duration"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyDuration"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="580dp"
                android:textColor="#193566"
                android:background="@drawable/textbox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:inputType="textPersonName"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="670dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/ingredients"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyIngredients"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="660dp"
                android:textColor="#193566"
                android:background="@drawable/textbox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:maxLines="4"
                android:inputType="textMultiLine"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="770dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/direction"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyDirection"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="820dp"
                android:textColor="#193566"
                android:hint="@string/step_1"
                android:textColorHint="#A9B6C9"
                android:background="@drawable/textbox"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:maxLines="6"
                android:layout_centerHorizontal="true"
                android:inputType="textMultiLine"/>


            <Button
                android:id="@+id/updateMyRecipeBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Edit Recipe"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#ECF0F3"
                android:layout_below="@+id/receiveMyDirection"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_background"
                android:layout_marginStart="20dp" />



            <Button
                android:id="@+id/saveUpdateMyRecipeBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Save Recipe"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#ECF0F3"
                android:layout_below="@+id/receiveMyDirection"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_background"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp" />

            <TextView
                android:id="@+id/whiteSpace"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/updateMyRecipeBtn"/>



        </RelativeLayout>

    </ScrollView>




</RelativeLayout>