<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light"
    tools:context=".Fragments.MyRecipeDetailsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/receiveMyRecipeImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                app:iss_auto_cycle="true"
                app:iss_period="1500"
                app:iss_delay="0"
                app:iss_text_align="CENTER"
                app:iss_title_background="@drawable/gradient"
                app:iss_error_image="@drawable/error"
                app:iss_selected_dot="@drawable/default_selected_dot"
                app:iss_unselected_dot="@drawable/default_unselected_dot" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/recipe_name"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/receiveMyRecipeName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:textColor="#193566"
                android:background="@drawable/textbox"
                android:drawablePadding="50dp"
                android:paddingLeft="15dp"
                android:inputType="text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/chef_name"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyChefName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="340dp"
                android:textColor="#193566"
                android:background="@drawable/textbox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:inputType="textPersonName"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="430dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/recipe_type"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyRecipeType"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="420dp"
                android:textColor="#193566"
                android:background="@drawable/textbox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:inputType="textPersonName"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="510dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/country"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyCountry"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="500dp"
                android:textColor="#193566"
                android:background="@drawable/textbox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:inputType="text"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="590dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/duration"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyDuration"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="580dp"
                android:textColor="#193566"
                android:background="@drawable/textbox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:inputType="textPersonName"/>


            <TextView
                android:id="@+id/ingredientsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="670dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/ingredients"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyIngredients"
                android:layout_below="@id/ingredientsText"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#193566"
                android:textColorHint="#A9B6C9"
                android:background="@drawable/textbox"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:maxLines="6"
                android:layout_centerHorizontal="true"
                android:inputType="textMultiLine"/>


            <TextView
                android:id="@+id/directionsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/receiveMyIngredients"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:textColor="#193566"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="@string/direction"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/receiveMyDirection"
                android:layout_below="@id/directionsText"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#193566"
                android:hint="@string/step_1"
                android:textColorHint="#A9B6C9"
                android:background="@drawable/textbox"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                android:maxLines="6"
                android:layout_centerHorizontal="true"
                android:inputType="textMultiLine"/>


            <Button
                android:id="@+id/saveUpdateMyRecipeBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/save_recipe"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#ECF0F3"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/receiveMyDirection"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_background"
                />

            <TextView
                android:id="@+id/whiteSpace"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/saveUpdateMyRecipeBtn"/>



        </RelativeLayout>

    </ScrollView>




</RelativeLayout>