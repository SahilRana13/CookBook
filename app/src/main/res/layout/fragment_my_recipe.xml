<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light"
    tools:context=".Fragments.MyRecipeFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/myImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/msd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myTextView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/myImageView"
        android:textColor="@color/dark"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/mySearchBarView"
        android:background="@drawable/email"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/myTextView"
        android:hint="Search Recipe"
        android:textColor="#193566"
        android:textColorHint="#A9B6C9"
        android:paddingLeft="25dp"
        android:drawablePadding="20dp"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/dark"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mySearchBarView"/>


    <ListView
        android:id="@+id/myRecipeListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mySearchBarView"
        android:layout_marginTop="20dp">
    </ListView>

</RelativeLayout>