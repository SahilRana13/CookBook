<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Fragments.MyRecipeFragment">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_my_recipe"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/msd"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/user_name_my_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image_my_recipe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/UserName"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linear_my_recipe"
        android:orientation="horizontal"
        android:layout_below="@id/user_name_my_recipe"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:text="Favourite"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:text="Recent"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Recipes"
        android:textSize="25sp"
        android:layout_below="@id/linear_my_recipe"
        android:textStyle="bold"
        android:id="@+id/my_recipe_textView"
        android:layout_marginLeft="10dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_recipe_textView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp">


    </ListView>

</RelativeLayout>